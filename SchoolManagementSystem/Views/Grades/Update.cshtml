@model SchoolManagementSystem.Models.Domain.GradeProf
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Grades</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" class="form-control" asp-for="Id" />

                <div class="form-group">
                <label asp-for="ProfFrstname">First Name *</label>
                <input type="text" class="form-control" asp-for="ProfFrstname" />
                <span asp-validation-for="ProfFrstname" class="text-danger"></span>
                </div>

                

                <div class="form-group">
                <label asp-for="ProfLastName">Last Name *</label>
                <input type="text" class="form-control" asp-for="ProfLastName" />
                <span asp-validation-for="ProfLastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="GradesProf">Grades *</label>
                <input type="number" class="form-control" asp-for="GradesProf" />
                <span asp-validation-for="GradesProf" class="text-danger"></span>
                </div>


                <div class="form-group">
                <label asp-for="StudentName">Student Name *</label>
                <select asp-for="StudentName" asp-items="Model.StudentList" class="form-control">
                <option value="">--select--</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StudentAM">Student AM *</label>
                    <select asp-for="StudentAM" asp-items="Model.StudentList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="SubjectId">Subject Name *</label>
                <select asp-for="SubjectId" asp-items="Model.SubjectList" class="form-control">
                <option value="">--select--</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="SubjectId">Subject year *</label>
                <select asp-for="SubjectId" asp-items="Model.SubjectList" class="form-control">
                <option value="">--select--</option>
                </select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="SubjectId">Subject Semester *</label>
                <select asp-for="SubjectId" asp-items="Model.SubjectList" class="form-control">
                <option value="">--select--</option>
                </select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                <div class="form-group">
                @TempData["msg"]
                </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button> 
                    <a href="/Grades/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>
