@model SchoolManagementSystem.Models.Domain.SubjectAdmin;
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Register a Subject</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="SubjectName">Subject Name *</label>
                    <input type="text" class="form-control" asp-for="SubjectName" />
                    <span asp-validation-for="SubjectName" class="text-danger"></span>

                    <label asp-for="SubjectYear">Subject Year *</label>
                    <input type="number" class="form-control" asp-for="SubjectYear" />
                    <span asp-validation-for="SubjectYear" class="text-danger"></span>

                    <label asp-for="SubjectSemester">Subject Semester *</label>
                    <input type="number" class="form-control" asp-for="SubjectSemester" />
                    <span asp-validation-for="SubjectSemester" class="text-danger"></span>


                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Subject/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>
