@model IEnumerable<SchoolManagementSystem.Models.Domain.SubjectAdmin>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Subject/Add">+ Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Subjects </h3>

            <table class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>SubjectName</th>
                        <th>Action</th>
                        <th>SubjectYear</th>
                        <th>Action</th>
                        <th>SubjectSemester</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SubjectName</td>
                            <td>
                                <a class="btn btn-success" href="/Subject/Update?id=@item.Id"> <i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Subject/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>

                            <td>@item.SubjectYear</td>
                            <td>
                                <a class="btn btn-success" href="/Subject/Update?id=@item.Id"> <i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Subject/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>

                            <td>@item.SubjectSemester</td>
                            <td>
                                <a class="btn btn-success" href="/Subject/Update?id=@item.Id"> <i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Subject/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
